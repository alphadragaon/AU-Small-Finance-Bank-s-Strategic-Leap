    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const timelineData = [
                {
                    date: "April 2017",
                    title: "Began Operations as an SFB",
                    description: "Evolving from its earlier avatar as AU Financiers, the company started its journey as a Small Finance Bank, focusing on customer-centric retail banking."
                },
                {
                    date: "April 2024",
                    title: "RBI Issues New Guidelines & Fincare Merger",
                    description: "The RBI released updated guidelines for SFB-to-universal bank conversions. Concurrently, AU SFB merged with Fincare SFB, increasing its scale and operational reach."
                },
                {
                    date: "July 2024",
                    title: "Board Approves Application",
                    description: "A special four-member board committee, tasked with overseeing the transition, formally approved the application to become a universal bank."
                },
                {
                    date: "September 2024",
                    title: "Application Submitted to RBI",
                    description: "The official application was submitted to the Reserve Bank of India, marking a formal step in the transition process."
                },
                {
                    date: "August 2025",
                    title: "RBI Grants In-Principle Approval",
                    description: "In a landmark decision, the RBI granted AU SFB the first in-principle approval in a decade for an SFB to transition into a universal bank."
                }
            ];

            const timelineContainer = document.getElementById('timeline-container');
            timelineData.forEach(item => {
                const div = document.createElement('div');
                div.className = 'mb-8 timeline-item cursor-pointer';
                div.innerHTML = `
                    <div class="flex items-center mb-1">
                        <p class="font-semibold text-amber-600">${item.date}</p>
                    </div>
                    <p class="text-slate-900 font-medium">${item.title}</p>
                    <div class="timeline-details text-slate-600 text-sm mt-1" style="display: none;">${item.description}</div>
                `;
                timelineContainer.appendChild(div);
            });

            timelineContainer.addEventListener('click', (e) => {
                const item = e.target.closest('.timeline-item');
                if (item) {
                    const details = item.querySelector('.timeline-details');
                    details.style.display = details.style.display === 'none' ? 'block' : 'none';
                }
            });

            const rbiCriteriaData = {
                labels: ['Gross NPA (%)', 'Net NPA (%)'],
                datasets: [
                    {
                        label: 'RBI Requirement (Max)',
                        data: [3, 1],
                        backgroundColor: 'rgba(251, 146, 60, 0.6)',
                        borderColor: 'rgba(251, 146, 60, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'AU SFB\'s Status',
                        data: [2.47, 0.88],
                        backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 1
                    }
                ]
            };

            const rbiChartCtx = document.getElementById('rbiCriteriaChart').getContext('2d');
            new Chart(rbiChartCtx, {
                type: 'bar',
                data: rbiCriteriaData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Percentage (%)'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Asset Quality: AU SFB vs. RBI Norms',
                            font: { size: 16 }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            const challenges = [
                { title: "Cultural Shift", description: "Transitioning from an inclusive, small-bank culture to the competitive, large-scale universal banking environment." },
                { title: "Operational Complexity", description: "Needing significant upgrades to risk management, technology, and compliance systems to handle a broader scope." },
                { title: "Intense Competition", description: "Facing direct competition from established giants like HDFC Bank, ICICI Bank, and SBI." },
                { title: "Governance & Compliance", description: "Strengthening frameworks to meet universal banking standards, including the complex NOFHC structure for the promoter's stake." }
            ];

            const enablers = [
                { title: "Merger Synergy", description: "Integration with Fincare SFB provided a larger deposit base and a beneficial rural-urban network mix." },
                { title: "Financial Strength", description: "A history of consistent profitability, high capital adequacy, and strong asset quality." },
                { title: "Governance Readiness", description: "A dedicated board committee proactively managed the entire transition application process." },
                { title: "SFB Legacy", description: "Deep expertise in retail banking and serving niche markets can be a key differentiator against larger, more generalized banks." }
            ];

            const challengesList = document.getElementById('challenges-list');
            challenges.forEach(item => {
                const li = document.createElement('li');
                li.className = 'bg-slate-50 p-3 rounded-lg';
                li.innerHTML = `<p class="font-medium text-slate-800">${item.title}</p><p class="text-sm text-slate-500">${item.description}</p>`;
                challengesList.appendChild(li);
            });

            const enablersList = document.getElementById('enablers-list');
            enablers.forEach(item => {
                const li = document.createElement('li');
                li.className = 'bg-slate-50 p-3 rounded-lg';
                li.innerHTML = `<p class="font-medium text-slate-800">${item.title}</p><p class="text-sm text-slate-500">${item.description}</p>`;
                enablersList.appendChild(li);
            });

            const discussionData = [
                {
                    question: "What are the strategic advantages and risks of this transition?",
                    answer: "<strong>Advantages:</strong> Access to wider markets, ability to offer more products (e.g., large corporate loans), enhanced brand reputation, and lower regulatory burdens (e.g., reduced PSL targets).<br><strong>Risks:</strong> Intense competition from established players, significant operational and cultural shifts, complexity of managing a larger and more diverse balance sheet, and execution risk in technology and governance upgrades."
                },
                {
                    question: "How should AU SFB manage the cultural and operational transition?",
                    answer: "A phased approach is crucial. For culture, focus on transparent communication, employee retraining, and aligning incentives with the new universal banking goals. Operationally, prioritize investment in scalable technology, robust risk management systems for new products, and a talent acquisition strategy to bring in expertise for areas like corporate and international banking."
                },
                {
                    question: "How would you prioritize investments in technology, talent, and marketing?",
                    answer: "<strong>1. Technology:</strong> Foundational investment in core banking systems, data analytics for risk management, and digital platforms to compete on customer experience. <br><strong>2. Talent:</strong> Critical for execution. Hire key leaders for new verticals first, then build teams. Invest heavily in upskilling the existing workforce to ensure alignment and retain institutional knowledge. <br><strong>3. Marketing:</strong> A targeted brand campaign to reposition AU as a full-service universal bank, while reassuring existing customers of continued focus on service."
                },
                {
                    question: "How can AU SFB leverage its SFB legacy to differentiate itself?",
                    answer: "AU SFB's 'secret weapon' is its deep experience in serving the underbanked and SME segments with agility and a customer-centric approach. It can differentiate itself by being the 'nimble giant'—offering the full suite of universal bank products but with the personalized service and rapid decision-making of an SFB. This can be particularly effective in the mid-market corporate and affluent retail segments that larger banks may serve with a more standardized approach."
                }
            ];

            const accordionContainer = document.getElementById('discussion-accordion');
            discussionData.forEach((item, index) => {
                const div = document.createElement('div');
                div.className = 'bg-white rounded-lg shadow-md';
                div.innerHTML = `
                    <button class="accordion-button w-full text-left p-5 flex justify-between items-center font-semibold text-slate-800 hover:bg-slate-50">
                        <span>${item.question}</span>
                        <span class="transform transition-transform duration-300">&#x25BC;</span>
                    </button>
                    <div class="accordion-content">
                        <div class="p-5 pt-0 text-slate-600">
                            ${item.answer}
                        </div>
                    </div>
                `;
                accordionContainer.appendChild(div);
            });

            accordionContainer.addEventListener('click', (e) => {
                const button = e.target.closest('.accordion-button');
                if (button) {
                    const content = button.nextElementSibling;
                    const arrow = button.querySelector('span:last-child');
                    
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        arrow.style.transform = 'rotate(0deg)';
                    } else {
                        document.querySelectorAll('.accordion-content').forEach(el => el.style.maxHeight = null);
                        document.querySelectorAll('.accordion-button span:last-child').forEach(el => el.style.transform = 'rotate(0deg)');
                        content.style.maxHeight = content.scrollHeight + "px";
                        arrow.style.transform = 'rotate(180deg)';
                    }
                }
            });

            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            document.querySelectorAll('#mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            const sections = document.querySelectorAll('.section-fade-in');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            sections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>
</body>
</html>
